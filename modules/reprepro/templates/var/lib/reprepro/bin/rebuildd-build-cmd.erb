#!/bin/bash

d=$1
d=$(echo $d|sed 's/-proposed//g')
a=$2
p=$3
v=$4
r=$5

DEB_BUILD_OPTIONS="<%= buildoptions %>" /usr/local/bin/pbuilder-${d}-${a} build --bindmounts <%= scope.lookupvar('reprepro::params::basedir') %>/repos/${r} --hookdir <%= scope.lookupvar('reprepro::params::basedir') %>/repos/${r}/bin/hook.d --logfile <%= scope.lookupvar('reprepro::params::basedir') %>/repos/${r}/logs/${p}-${v}-${a}.log ${p}_${v}.dsc
