#!/bin/bash

d=$1
p=$2
v=$3
v=$(echo $v|sed 's/[1-9]://g')
a=$4

su -l -c "/usr/bin/reprepro -V --keepunreferencedfiles -b /home/<%= scope.lookupvar('reprepro::params::user') %>/ubuntu include ${d} /var/cache/pbuilder/${d}-${a}/result/${p}_${v}_${a}.changes" <%= scope.lookupvar('reprepro::params::user') %> 
