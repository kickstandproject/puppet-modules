#!/bin/bash

d=$1
p=$2
v=$3
v=$(echo $v|sed 's/[1-9]://g')
a=$4
r=$5

dist=$(echo $d|sed 's/-proposed//g')

su -l -c "/usr/bin/reprepro -V --keepunreferencedfiles -b <%= scope.lookupvar('reprepro::params::homedir') %>/repos/${r} include ${d} /var/cache/pbuilder/${dist}-${a}/result/${p}_${v}_${a}.changes" <%= scope.lookupvar('reprepro::params::user') %> 

if [ -x <%= scope.lookupvar('reprepro::params::homedir') %>/repos/${r}/bin/rsync ]; then
	su -l -c "<%= scope.lookupvar('reprepro::params::homedir') %>/repos/${r}/bin/rsync" <%= scope.lookupvar('reprepro::params::user') %>
fi
